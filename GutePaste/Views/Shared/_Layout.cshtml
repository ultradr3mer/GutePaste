<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - GutePaste</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;1,300;1,400&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Signika+Negative:wght@300;400;500;600&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@300;400;500&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="~/lib/bootstrap-5.1.3/scss/custom-bootstrap.min.css" />
  <link rel="stylesheet" href="~/lib/icon-font/bootstrap-icons.css" />
  <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-md navbar-dark bg-light shadow-a">
      <div class="container-fluid container navbar-container">
        <a class="navbar-brand bg-primary me-3 ps-2 pe-2 text-black" asp-controller="home" asp-action="index">
          <i class="logo bi bi-emoji-smile-upside-down ps-2 pe-2 align-middle"></i>
          <span class="logo-text me-2 align-middle">Home</span>
        </a>
        <button class="navbar-toggler bg-primary me-2" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto">
            @*          <li class="nav-item">
              <a class="nav-link @(ViewData["Title"] as string == "Home" ? "text-primary" : "")" aria-current="page" asp-controller="home" asp-action="index">Home</a>
              </li>*@
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <main role="main" class="pb-3 bg-dark">
    <div class="container">
      @RenderBody()
    </div>
  </main>

  <footer class="footer text-muted">
    <div class="container">
      &copy; 2022 - GutePaste - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
  </footer>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap-5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
